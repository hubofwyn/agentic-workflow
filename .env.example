# Environment Configuration for Agentic Workflow
# Copy this file to .env and update with your values

# Application
NODE_ENV=development
PORT=3000
HOST=localhost
APP_NAME=agentic-workflow
APP_VERSION=1.0.0

# Security
JWT_SECRET=your-super-secret-jwt-key-change-in-production
SESSION_SECRET=your-session-secret-change-in-production
ENCRYPTION_KEY=your-32-character-encryption-key
CORS_ORIGIN=http://localhost:3000

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/agentic_dev
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10
DATABASE_MIGRATION_TABLE=knex_migrations

# Redis
REDIS_URL=redis://localhost:6379
REDIS_PREFIX=agentic:
REDIS_TTL=3600

# AI/Claude
CLAUDE_API_KEY=your-claude-api-key
CLAUDE_MODEL=claude-3-opus-20240229
CLAUDE_MAX_TOKENS=100000
CLAUDE_TEMPERATURE=0.7

# OpenTelemetry
OTEL_SERVICE_NAME=agentic-workflow
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_EXPORTER_OTLP_PROTOCOL=grpc
OTEL_TRACES_EXPORTER=otlp
OTEL_METRICS_EXPORTER=otlp
OTEL_LOGS_EXPORTER=otlp
OTEL_RESOURCE_ATTRIBUTES=service.name=agentic-workflow,service.version=1.0.0

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_DIR=./logs
LOG_MAX_SIZE=10485760
LOG_MAX_FILES=5
LOG_CONSOLE_ENABLED=true

# Monitoring
METRICS_ENABLED=true
METRICS_PORT=9090
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/health
HEALTH_CHECK_INTERVAL=30000

# Error Tracking
SENTRY_DSN=your-sentry-dsn
SENTRY_ENVIRONMENT=development
SENTRY_SAMPLE_RATE=0.1
SENTRY_TRACES_SAMPLE_RATE=0.1

# GitHub
GITHUB_TOKEN=your-github-token
GITHUB_OWNER=verlyn13
GITHUB_REPO=agentic-workflow

# Slack (optional)
SLACK_WEBHOOK_URL=your-slack-webhook-url
SLACK_CHANNEL=#development
SLACK_USERNAME=Agentic Bot

# Email (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@agentic-workflow.dev

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false
RATE_LIMIT_SKIP_FAILED_REQUESTS=false

# Feature Flags
FEATURE_AI_REVIEW=true
FEATURE_AUTO_FIX=true
FEATURE_AUTO_DEPLOY=false
FEATURE_TELEMETRY=true

# Development
DEV_MODE=true
DEV_AUTO_RELOAD=true
DEV_SOURCE_MAPS=true
DEV_VERBOSE_ERRORS=true

# Testing
TEST_DATABASE_URL=postgresql://postgres:postgres@localhost:5432/agentic_test
TEST_REDIS_URL=redis://localhost:6379/1
TEST_LOG_LEVEL=error
TEST_TIMEOUT=30000

# Production (override in production)
PRODUCTION_DATABASE_URL=
PRODUCTION_REDIS_URL=
PRODUCTION_CDN_URL=
PRODUCTION_API_URL=